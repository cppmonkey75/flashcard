<!-- views/retrieve-page.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Retrieve Flashcards</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: #f4f4f9;
    }

    .container {
      text-align: center;
    }

    .card-container {
      perspective: 1000px; /* Add perspective for 3D effect */
      width: 300px;
      height: 400px;
      margin-bottom: 40px; /* Increase bottom margin for more space */
    }

    .card {
      width: 100%;
      height: 100%;
      position: relative;
      transform-style: preserve-3d;
      transition: transform 0.6s;
    }

    .card.flip {
      transform: rotateY(180deg); /* Flip the card */
    }

    .card .side {
      position: absolute;
      width: 100%;
      height: 100%;
      backface-visibility: hidden; /* Hide the back side when flipped */
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
      font-size: 18px;
      text-align: center;
      background-color: #fff;
      border: 1px solid #ccc;
      border-radius: 10px;
    }

    .card .front {
      background-color: #f0f0f0;
    }

    .card .back {
      background-color: #e0e0e0;
      transform: rotateY(180deg); /* Rotate the back side 180 degrees */
    }

    /* Preserve line breaks and whitespace */
    .side p {
      white-space: pre-wrap; /* This allows line breaks and multiple spaces to be preserved */
      word-wrap: break-word; /* This makes sure text will break inside the container if too long */
      margin: 0;
    }

    /* Button container style */
    .button-container {
      display: flex;
      justify-content: space-between;
      width: 100%;
      max-width: 300px;
      margin-top: 40px; /* Increased gap for better spacing between the card and buttons */
    }

    button {
      padding: 10px 20px;
      cursor: pointer;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 16px;
      flex: 1;
      margin: 0 5px;
    }

    button:hover {
      background-color: #45a049;
    }

    .done-button {
      background-color: #f44336;
    }

    .done-button:hover {
      background-color: #e53935;
    }

    /* Adjust button container positioning */
    .button-container {
      justify-content: space-evenly; /* Space out buttons evenly */
    }

    /* Done button styling */
    .done-button-container {
      margin-top: 40px; /* Add more space between the action buttons and Done button */
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Flashcard</h1>
    <div class="card-container">
      <div class="card" id="flashcard">
        <!-- Front side (Question) -->
        <div class="side front">
          <p><%= currentFlashcard.question %></p>
        </div>
        
        <!-- Back side (Answer) -->
        <div class="side back">
          <p><%= currentFlashcard.answer %></p>
        </div>
      </div>
    </div>

    <!-- Button Container for Navigation and Actions -->
    <div class="button-container">
      <% if (index > 0) { %>
        <form method="get" action="/retrieve-page">
          <button type="submit" name="index" value="<%= index - 1 %>">Previous</button>
        </form>
      <% } %>

      <form id="flip-form">
        <button type="button" id="flip-btn">Flip</button>
      </form>

      <% if (index < totalFlashcards - 1) { %>
        <form method="get" action="/retrieve-page">
          <button type="submit" name="index" value="<%= index + 1 %>">Next</button>
        </form>
      <% } %>
    </div>

    <!-- Done button to go back to the landing page -->
    <div class="done-button-container">
      <form method="get" action="/landing">
        <button type="submit" class="done-button">Done</button>
      </form>
    </div>
  </div>

  <script>
    // Handle the flip action
    const flipButton = document.getElementById("flip-btn");
    const flashcard = document.getElementById("flashcard");

    flipButton.addEventListener("click", () => {
      flashcard.classList.toggle("flip");
    });
  </script>
</body>
</html>

